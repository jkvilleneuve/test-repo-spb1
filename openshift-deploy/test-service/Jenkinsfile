pipeline {
	agent any
	stages {
		stage('DeployToDev') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
				build job: 'test-service-to-dev', parameters: [string(name: 'MODULE_TAG', value: "${MODULE_TAG}")]
			}
		}
		stage('AutoTestsOnDev') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
				sh '${WORKSPACE}/openshift-deploy/test-service/dev-tests/test-service-available.sh'
			}
		}
		stage('WaitingForApprovalToTest') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
			}
		}
		stage('DeployToTest') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
			}
		}
		stage('AutoTestsOnTest') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
			}
		}
		stage('WaitingForApprovalToProd') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
			}
		}
		stage('DeployToProd') {
			steps {
				sh 'echo "####################"'
				sh 'echo "tag=${MODULE_TAG}"'
			}
		}
	}
}
